{% extends 'base.html.twig' %}

{% block title %}{{ user.id ? 'Update user' : 'Create user' }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-4">{{ user.id ? 'Update user' : 'Create user' }}</h2>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    {{ form_start(form) }}
        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_label(form.firstName) }}
                {{ form_widget(form.firstName, { attr: { class: 'form-control' } }) }}
                {{ form_errors(form.firstName) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.lastName) }}
                {{ form_widget(form.lastName, { attr: { class: 'form-control' } }) }}
                {{ form_errors(form.lastName) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.plainPassword) }}
            {{ form_widget(form.plainPassword, { attr: { class: 'form-control' } }) }}
            {{ form_errors(form.plainPassword) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.roles) }}
            <div class="d-flex flex-column">
                {{ form_widget(form.roles) }}
            </div>
            {{ form_errors(form.roles) }}
        </div>

        <div class="mb-3 form-check">
            {{ form_widget(form.isVerified) }}
            {{ form_label(form.isVerified) }}
            {{ form_errors(form.isVerified) }}
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_admin_users') }}" class="btn btn-outline-secondary">â¬… Back</a>
            <button type="submit" class="btn btn-primary">
                {{ user.id ? 'Update' : 'Create' }}
            </button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
