{% extends 'base.html.twig' %}
{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
<h2 class="mb-4">Gestion des utilisateurs</h2>

<a href="{{ path('app_admin_users_new') }}" class="btn btn-primary mb-3">Créer un utilisateur</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Rôles</th>
            <th>Vérifié</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.fullName|default(user.email) }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>{{ user.isVerified ? '✔️' : '❌' }}</td>
                <td>
                    <a href="{{ path('app_admin_users_edit', { id: user.id }) }}" class="btn btn-sm btn-outline-secondary">Éditer</a>

                    <form method="post" action="{{ path('app_admin_users_delete', { id: user.id }) }}" style="display: inline;" onsubmit="return confirm('Confirmer la suppression ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center">Aucun utilisateur trouvé.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
