{% extends 'base.html.twig' %}

{% block title %}Choose a user to chat{% endblock %}

{% block body %}
<div class="container my-5">
    <h2 class="mb-4">Start a conversation</h2>

    {% if users is empty %}
        <p class="text-muted">No users available for chat.</p>
    {% else %}
        <ul class="list-group">
            {% for user in users %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>{{ user.fullName|default(user.email) }}</span>
                    <a href="{{ path('chat_index', { receiverId: user.id }) }}" class="btn btn-outline-custom btn-sm">
                        Chat
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</div>
{% endblock %}
