{% extends 'base.html.twig' %}

{% block title %}My Blog{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">List of articles</h1>

    {% if articles is empty %}
        <p class="text-center text-muted">Any article found!</p>
    {% else %}
        <div class="row justify-content-center g-4">
            {% for article in articles %}
                <div class="col-md-6 col-lg-5">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{ article.content[:150] ~ '...' }}</p>
                            <p class="card-text mt-auto">
                                <small class="text-muted">
                                    Publish at {{ article.createAt ? article.createAt|date('d/m/Y H:i') : '' }}
                                </small>
                            </p>
                            <div class="mt-3">
                                <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-sm btn-outline-primary me-2">See</a>
                                <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-sm btn-outline-secondary">Update</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
