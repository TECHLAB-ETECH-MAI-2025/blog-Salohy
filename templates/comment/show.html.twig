{% extends 'base.html.twig' %}

{% block title %}Comments details{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Comments details</h1>

    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <td>{{ comment.id }}</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>{{ comment.author }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ comment.content }}</td>
        </tr>
        <tr>
            <th>Creation date</th>
            <td>{{ comment.createdAt ? comment.createdAt|date('d/m/Y H:i') : '' }}</td>
        </tr>
    </table>

    <a href="{{ path('app_comment_index') }}" class="btn btn-outline-primary">Back to list</a>
    <a href="{{ path('app_comment_edit', {'id': comment.id}) }}" class="btn btn-secondary">Edit</a>
    {{ include('comment/_delete_form.html.twig') }}
</div>
{% endblock %}
