{% extends 'base.html.twig' %}

{% block title %}List of comments{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">List of comments</h1>

    <div class="text-end mb-4">
        <a href="{{ path('app_comment_new') }}" class="btn btn-primary">Add a comment</a>
    </div>

    {% if comments is empty %}
        <p class="text-center text-muted">No comment yet!</p>
    {% else %}
        <div class="row g-4">
            {% for comment in comments %}
                <div class="col-md-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ comment.author }}</h5>
                            <p class="card-text">{{ comment.content }}</p>
                            <p class="card-text mt-auto">
                                <small class="text-muted">Posted on {{ comment.createdAt ? comment.createdAt|date('d/m/Y H:i') : '' }}</small>
                            </p>
                            <div class="mt-3">
                                <a href="{{ path('app_comment_show', {'id': comment.id}) }}" class="btn btn-sm btn-outline-primary me-2">See</a>
                                <a href="{{ path('app_comment_edit', {'id': comment.id}) }}" class="btn btn-sm btn-outline-secondary">Update</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
