{% extends 'base.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <!-- Sidebar Menu -->
        <div class="col-md-3 mb-4">
            <div class="list-group shadow-sm sidebar-menu">
                <a href="{{ path('app_profile') }}" class="list-group-item list-group-item-action">
                    My Profile
                </a>
                <a href="{{ path('app_profile_edit') }}" class="list-group-item list-group-item-action">
                    Edit Profile
                </a>
                <a href="{{ path('app_profile_change_password') }}" class="list-group-item list-group-item-action active">
                    Change Password
                </a>
                <form action="{{ path('app_logout') }}" method="post">
                    <button type="submit" class="list-group-item list-group-item-action text-start">
                        Logout
                    </button>
                </form>
            </div>
        </div>

        <!-- Form Section -->
        <div class="col-md-9">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="mb-4">Change Your Password</h3>

                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.currentPassword, 'Current Password') }}
                        {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.currentPassword) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.plainPassword.first, 'New Password') }}
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.plainPassword.first) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.plainPassword.second, 'Confirm New Password') }}
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.plainPassword.second) }}
                    </div>

                    <button type="submit" class="btn btn-outline-custom">Update Password</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block stylesheets %}
{{ parent() }}
<style>
    .avatar-placeholder {
        width: 100px;
        height: 100px;
        background-color: #415A77;
        color: white;
        border-radius: 50%;
        font-size: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: auto;
    }

    .sidebar-menu .list-group-item {
        background-color: #fff;
        color: #000;
        border: none;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .sidebar-menu .list-group-item:hover,
    .sidebar-menu .list-group-item.active {
        background-color: #FCA311;
        color: #fff;
    }

    .sidebar-menu form button.list-group-item {
        background-color: #fff;
        color: #000;
        border: none;
        width: 100%;
        text-align: left;
    }

    .sidebar-menu form button.list-group-item:hover {
        background-color: #FCA311;
        color: #fff;
    }
</style>
{% endblock %}
